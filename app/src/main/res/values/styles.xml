<resources>
    <!-- Base application theme. -->
    <!-- Para eliminar la barra superior con el nombre de la app, se poner NoActionBar  o si se va a dejar DarkActionBar-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="Progressbar">
        <item name="colorPrimary">#FF8D23</item>
    </style>

    <style name="Timer">
        <item name="colorPrimary">#FFEB3B</item>
    </style>
    
    <style name="Dialogo">
        <item name="android:windowBackground">@drawable/empty_background</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowMinWidthMajor">80%</item>
        <item name="android:windowActionBar">false</item>
    </style>
</resources>